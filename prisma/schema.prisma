// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // MongoDB connection string
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  games Game[]
}

model Game {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  user  User?   @relation(fields: [userId], references: [id])
  userId String?
}
